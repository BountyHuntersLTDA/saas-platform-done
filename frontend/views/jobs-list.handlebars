<section class="content">
    <div class="container-fluid">

        <!-- Widgets -->
        <div class="row clearfix">

            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                JOBS
                            </h2>

                            <div class="actions clearfix">
                                <a class="btn btn-primary m-t-15 waves-effect" href="/jobs/add"> NEW </a>
                            </div>

                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Action</a></li>
                                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Another action</a></li>
                                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Something else here</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="body table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>DESCRIPTION</th>
                                        <th>CLIENT</th>
                                        <th>VALUE ($)</th>
                                        <th>ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each data.jobs}}
                                    <tr>
                                        <td>{{this.description}}</td>
                                        <td>{{this.client.name}}</td>
                                        <td>{{this.value}}</td>

                                        <td>
                                            <div class="actions clearfix">
                                                <a class="btn btn-xs btn-success waves-effect" href="/jobs/{{this._id}}/pay"> <i class="material-icons">attach_money</i> </a>
                                                <a class="btn btn-xs btn-warning waves-effect" href="/jobs/{{this._id}}/edit"> <i class="material-icons">mode_edit</i> </a>
                                                <a class="btn btn-xs btn-danger waves-effect" href="/jobs/{{this._id}}/delete"> <i class="material-icons">delete</i> </a>
                                            </div>
                                        </td>

                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</section>